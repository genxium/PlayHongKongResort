# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Global
GET	 /	controllers.Application.index()
GET	 /admin	controllers.Application.admin()

# Account System
POST /user/login controllers.UserController.login()
POST /user/register controllers.UserController.register()

GET /user/status controllers.UserController.status(token: String ?=null)
GET /user/name/duplicate controllers.UserController.duplicate(name: String ?=null)

GET /user/relation controllers.UserController.relation(activity_id: Integer ?=null, token: String ?=null)
POST /user/logout controllers.UserController.logout()

GET /user/password/index controllers.PasswordController.index()
GET /user/password/request controllers.PasswordController.request(email: String ?=null)
GET /user/password/reset controllers.PasswordController.reset()
POST /user/password/confirm controllers.PasswordController.confirm()

GET /user/email/verify controllers.EmailController.verify(email: String ?=null, code: String ?=null)
GET /user/email/duplicate controllers.EmailController.duplicate(email: String ?=null)

# Home Page

POST /activity/delete controllers.ActivityController.delete()
POST /activity/join controllers.ActivityController.join()
POST /activity/save controllers.ActivityController.save()
PUT /activity/submit controllers.ActivityController.submit()
GET /activity/query controllers.ActivityController.query(ref_index: String ?=null, page: Integer ?=null, num_items: Integer ?=null, orientation: Integer ?=null, direction: Integer ?=null, token: String ?= null, viewee_id: Integer ?=null, relation: Integer ?=null, status: Integer ?=null)
GET /activity/list controllers.ActivityController.list(page_st: Integer ?=null, page_ed: Integer ?=null, num_items: Integer ?=null, orientation: Integer ?=null, token: String ?= null, viewee_id: Integer ?=null, relation: Integer ?=null, status: Integer ?=null)
GET /activity/detail controllers.ActivityController.detail(activity_id: Integer ?=null, token: String ?=null)
PUT /activity/mark controllers.ActivityController.mark()

# Profile
GET /user/profile/show controllers.UserController.profile()
GET /user/detail controllers.UserController.detail(viewee_id: Integer ?=null, token : String ?=null)

POST /user/avatar/upload controllers.AvatarController.upload()

# Admin
PUT /admin/accept controllers.AdminController.accept()
PUT /admin/reject controllers.AdminController.reject()
PUT /admin/delete controllers.AdminController.delete()

# Activity Detail
GET /activity/detail/show controllers.ActivityController.showDetail()
POST /activity/participants/update controllers.ParticipantController.update()
GET /activity/ownership controllers.ActivityController.ownership(token: String ?=null, activity_id: Integer ?=null)

# Comment

POST /comment/submit controllers.CommentController.submit()
GET /comment/query controllers.CommentController.query(activity_id: Integer ?=null, ref_index: String ?=null, page: Integer ?=null, num_items: Integer ?=null, direction: Integer ?=null)
GET /comment/list controllers.CommentController.list(activity_id: Integer ?=null, page_st: Integer ?=null, page_ed: Integer ?=null, num_items: Integer ?=null)
GET /comment/single/query controllers.CommentController.querySingle(comment_id: Integer ?=null)
POST /comment/sub/submit controllers.SubCommentController.submit()
GET /comment/sub/query controllers.SubCommentController.query(parent_id: Integer ?=null, ref_index: String ?=null, page: Integer ?=null, num_items: Integer ?=null, direction: Integer ?=null)
GET /comment/sub/list controllers.SubCommentController.list(parent_id: Integer ?=null, page_st: Integer ?=null, page_ed: Integer ?=null, num_items: Integer ?=null)
GET /comment/view controllers.CommentController.view()

# Assessment
POST /assessment/submit controllers.AssessmentController.submit
GET /assessment/query controllers.AssessmentController.query(ref_index: String ?=null, num_items: Integer ?=null, direction: Integer ?=null, token: String ?=null, to: Integer ?=null, activity_id: Integer ?=null)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
