# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Global
GET	 /	controllers.Application.index()
GET	 /show	controllers.Application.show(page: String)

# Home page

POST /login controllers.Application.login()
POST /register controllers.Application.register()
POST /checkLoginStatus controllers.Application.checkLoginStatus()
POST /logout controllers.Application.logout()

POST /createActivity controllers.ActivityController.createActivity()
POST /updateActivity controllers.ActivityController.updateActivity()
POST /deleteActivity controllers.ActivityController.deleteActivity()
POST /submitActivity controllers.ActivityController.submitActivity()
POST /joinActivity controllers.ActivityController.joinActivity()

GET /activity/query controllers.ActivityController.query(refIndex: Integer, numItems: Integer, direction: Integer, token: String ?= null)
GET  /queryDefaultActivities controllers.ActivityQueryController.queryDefaultActivities(refIndex: Integer, numItems: Integer, direction: Integer)
GET /queryDefaultActivitiesByUser controllers.ActivityQueryController.queryDefaultActivitiesByUser(refIndex: Integer, numItems: Integer, direction: Integer, token: String)
GET /queryActivitiesHostedByUser controllers.ActivityQueryController.queryActivitiesHostedByUser(refIndex: Integer, numItems: Integer, direction: Integer, token: String)

# User Profile Editor
POST /uploadAvatar controllers.Application.uploadAvatar()

# Admin Page
GET /queryPendingActivitiesByAdmin controllers.AdminController.queryPendingActivitiesByAdmin(refIndex: Integer, numItems: Integer, direction: Integer, token: String)
GET /queryAcceptedActivitiesByAdmin controllers.AdminController.queryAcceptedActivitiesByAdmin(refIndex: Integer, numItems: Integer, direction: Integer, token: String)
POST /acceptActivity controllers.AdminController.acceptActivity()
POST /deleteActivityByAdmin controllers.AdminController.deleteActivityByAdmin()

# Activity Detail Page
GET /queryActivityDetail controllers.ActivityQueryController.queryActivityDetail(activityId: Integer)
POST /updateActivityParticipants controllers.ActivityController.updateActivityParticipants()
POST /queryActivityOwnership controllers.ActivityController.queryActivityOwnership()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
