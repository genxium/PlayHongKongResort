# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Global
GET	 /	controllers.Application.index()
GET	 /admin	controllers.Application.admin()

# Home page
POST /user/login controllers.UserController.login()
POST /user/register controllers.UserController.register()
GET /user/status controllers.UserController.status(token: String ?=null)
GET /user/name/duplicate controllers.UserController.nameDuplicate(name: String ?=null)
GET /user/email/duplicate controllers.UserController.emailDuplicate(email: String ?=null)
GET /user/email/verify controllers.UserController.emailVerification(code: String ?=null)
GET /user/relation controllers.UserController.relation(activity_id: Integer ?=null, token: String ?=null)
POST /user/logout controllers.UserController.logout()

POST /activity/delete controllers.ActivityController.delete()
POST /activity/join controllers.ActivityController.join()
POST /activity/save controllers.ActivityController.save()
PUT /activity/submit controllers.ActivityController.submit()
GET /activity/query controllers.ActivityController.query(ref_index: String ?=null, num_items: Integer ?=null, direction: Integer ?=null, token: String ?= null, user_id: Integer ?=null, relation: Integer ?=null, status: Integer ?=null)
GET /activity/detail controllers.ActivityController.detail(activity_id: Integer ?=null, token: String ?=null)

# Profile
GET /user/profile/show controllers.UserController.showProfile()
GET /user/detail controllers.UserController.detail(user_id: Integer ?=null, token : String ?=null)
POST /user/avatar/upload controllers.UserController.uploadAvatar()

# Admin
PUT /admin/accept controllers.AdminController.accept()
PUT /admin/reject controllers.AdminController.reject()
PUT /admin/delete controllers.AdminController.delete()

# Activity Detail
GET /activity/detail/show controllers.ActivityController.showDetail()
POST /activity/participants/update controllers.ActivityController.updateParticipants()
GET /activity/ownership controllers.ActivityController.ownership(token: String ?=null, activity_id: Integer ?=null)
PUT /comment/submit controllers.CommentController.submit()
GET /comment/query controllers.CommentController.query(activity_id: Integer ?=null, ref_index: String ?=null, num_items: Integer ?=null, direction: Integer ?=null, token: String ?=null)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
