# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Global
GET	 /	controllers.Application.index()
GET	 /show	controllers.Application.show(page: String)

# Home page
POST /user/login controllers.UserController.login()
POST /user/register controllers.UserController.register()
GET /user/status controllers.UserController.status(token: String ?=null)
GET /user/name/duplicate controllers.UserController.nameDuplicate(username: String ?=null)
GET /user/email/duplicate controllers.UserController.emailDuplicate(email: String ?=null)
GET /user/email/verify controllers.UserController.emailVerification(code: String ?=null)
GET /user/relation controllers.UserController.relation(activityId: Integer ?=null, token: String ?=null)
POST /user/logout controllers.UserController.logout()

POST /activity/delete controllers.ActivityController.delete()
POST /activity/join controllers.ActivityController.join()
POST /activity/save controllers.ActivityController.save()
PUT /activity/submit controllers.ActivityController.submit()
GET /activity/query controllers.ActivityController.query(refIndex: String ?=null, numItems: Integer ?=null, direction: Integer ?=null, token: String ?= null, target: Integer ?=null, relation: Integer ?=null, status: Integer ?=null)
GET /activity/detail controllers.ActivityController.detail(activityId: Integer)

# Profile
GET /user/profile controllers.Application.profile(target: Integer ?=null)
POST /user/uploadAvatar controllers.UserController.uploadAvatar()

# Admin
PUT /admin/accept controllers.AdminController.accept()
PUT /admin/reject controllers.AdminController.reject()
PUT /admin/delete controllers.AdminController.delete()

# Activity Detail
GET /app/detail controllers.Application.detail(activityId: Integer ?=null)
POST /updateActivityParticipants controllers.ActivityController.updateActivityParticipants()
GET /activity/ownership controllers.ActivityController.ownership(token: String ?=null, activityId: Integer ?=null)
POST /comment/submit controllers.CommentController.submit()
GET /comment/query controllers.CommentController.query(activityId: Integer ?=null, refIndex: String ?=null, numItems: Integer ?=null, direction: Integer ?=null, token: String ?=null)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
