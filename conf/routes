# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Global
GET	 /	controllers.Application.index()
GET	 /show	controllers.Application.show(page: String)

# Home page

POST /login controllers.Application.login()
POST /register controllers.Application.register()
POST /checkLoginStatus controllers.Application.checkLoginStatus()
POST /logout controllers.Application.logout()

POST /activity/delete controllers.ActivityController.delete()
POST /activity/join controllers.ActivityController.join()
POST /activity/create controllers.ActivityController.create()
PUT /activity/update controllers.ActivityController.update()
PUT /activity/submit controllers.ActivityController.submit()
GET /activity/query controllers.ActivityController.query(refIndex: Integer, numItems: Integer, direction: Integer, token: String ?= null, relation: Integer ?=null)
GET /activity/detail controllers.ActivityController.detail(activityId: Integer)

# User Profile Editor
POST /uploadAvatar controllers.Application.uploadAvatar()

# Admin Page
GET /queryPendingActivitiesByAdmin controllers.AdminController.queryPendingActivitiesByAdmin(refIndex: Integer, numItems: Integer, direction: Integer, token: String)
GET /queryAcceptedActivitiesByAdmin controllers.AdminController.queryAcceptedActivitiesByAdmin(refIndex: Integer, numItems: Integer, direction: Integer, token: String)
POST /acceptActivity controllers.AdminController.acceptActivity()
POST /deleteActivityByAdmin controllers.AdminController.deleteActivityByAdmin()

# Activity Detail Page
POST /updateActivityParticipants controllers.ActivityController.updateActivityParticipants()
GET /activity/ownership controllers.ActivityController.ownership(token: String ?=null, activityId: Integer ?=null)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
