# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Global
GET	 /	controllers.Application.index()
GET	 /:page	controllers.Application.show(page)

# Home page

POST /login controllers.Application.login()
POST /register controllers.Application.register()
POST /checkLoginStatus controllers.Application.checkLoginStatus()
POST /createActivity controllers.Application.createActivity()
POST /updateActivity controllers.Application.updateActivity()
POST /deleteActivity controllers.Application.deleteActivity()
POST /submitActivity controllers.Application.submitActivity()
POST /joinActivity controllers.Application.joinActivity()
POST /logout controllers.Application.logout()
POST /queryActivitiesHostedByUser controllers.Application.queryActivitiesHostedByUser()
POST /queryDefaultActivities controllers.Application.queryDefaultActivities()
POST /queryDefaultActivitiesByUser controllers.Application.queryDefaultActivitiesByUser()

GET  /queryDefaultActivitiesByPageIndex controllers.Application.queryDefaultActivitiesByPageIndex(pageIndex: Integer ?= 1)

# User Profile Editor
POST /uploadAvatar controllers.Application.uploadAvatar()

# Admin Page
POST /queryDefaultActivitiesByHost controllers.Application.queryDefaultActivitiesByHost()
POST /acceptActivity controllers.Application.acceptActivity()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /*file               		controllers.Assets.at(path="/public", file)