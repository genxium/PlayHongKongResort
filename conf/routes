# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Global
GET	 /	controllers.Application.index()
GET	 /show	controllers.Application.show(page: String)

# Home page

POST /login controllers.Application.login()
POST /register controllers.Application.register()
POST /checkLoginStatus controllers.Application.checkLoginStatus()
POST /createActivity controllers.Application.createActivity()
POST /updateActivity controllers.Application.updateActivity()
POST /deleteActivity controllers.Application.deleteActivity()
POST /submitActivity controllers.Application.submitActivity()
POST /joinActivity controllers.Application.joinActivity()
POST /logout controllers.Application.logout()
POST /queryActivitiesHostedByUser controllers.Application.queryActivitiesHostedByUser()
POST /queryDefaultActivitiesByUser controllers.Application.queryDefaultActivitiesByUser()

POST  /queryDefaultActivities controllers.Application.queryDefaultActivities()

# User Profile Editor
POST /uploadAvatar controllers.Application.uploadAvatar()

# Admin Page
POST /queryPendingActivitiesByAdmin controllers.AdminController.queryPendingActivitiesByAdmin()
POST /queryAcceptedActivitiesByAdmin controllers.AdminController.queryAcceptedActivitiesByAdmin()
POST /acceptActivity controllers.AdminController.acceptActivity()
POST /deleteActivityByAdmin controllers.AdminController.deleteActivityByAdmin()

# Activity Detail Page
GET /showActivityDetailPage controllers.ActivityController.showActivityDetailPage(activityId: Integer) 
GET /queryActivityDetail controllers.ActivityController.queryActivityDetail(activityId: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /*file               		controllers.Assets.at(path="/public", file)
